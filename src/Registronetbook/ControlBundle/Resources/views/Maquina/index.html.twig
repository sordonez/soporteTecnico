{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Maquina list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Serie</th>
                <th>Marca</th>
                <th>Anulado</th>
                <th>Descripcion</th>
                <th>Fechaalta</th>
                <th>Fechabaja</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_maquina_show', { 'id': entity.id }) }}">{{ entity.serie }}</a></td>
                <td>{{ entity.marca }}</td>
                <td>{{ entity.anulado }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fechaAlta %}{{ entity.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaBaja %}{{ entity.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_maquina_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_maquina_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_maquina_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
