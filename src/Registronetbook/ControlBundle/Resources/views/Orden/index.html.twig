{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Orden list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Anulado</th>
                <th>Fechaanulado</th>
                <th>Finalizado</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_orden_show', { 'id': entity.id }) }}">{{ entity.fecha }}</a></td>
                <td>{{ entity.anulado }}</td>
                <td>{% if entity.fechaAnulado %}{{ entity.fechaAnulado|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.finalizado }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_orden_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_orden_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_orden_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
